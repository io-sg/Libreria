@model IEnumerable<Libreria2.Models.Ubicacion>


@{
    ViewData["Title"] = "Gestión de Ubicaciones";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                    <!-- Botón para abrir el modal de generar nueva ubicación -->
                    <button class="btn btn-success" data-toggle="modal" data-target="#modalAgregarAlmacen">Agregar Nueva ubicación</button>
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Buscar por nombre">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">Buscar</button>
                    </div>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID del Almacen</th>
                            <th>Nombre</th>
                            <th>Observaciones</th>
                            <th>Estatus</th>
                            <th>Fecha de Última Actualización</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var almacen in Model)
                        {
                            <tr>
                                <td>@almacen.idAlmacen</td>
                                <td>@almacen.nombre</td>
                                <td>@almacen.observaciones</td>
                                <td>@almacen.status</td>
                                <td>@almacen.fecha</td>
                                <td>
                                    @if (almacen.status == 1)
                                    {
                                        <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modalEditarAlmacen" data-idalmacen="@almacen.idAlmacen" data-nombre="@almacen.nombre" data-observaciones="@almacen.observaciones" data-status="@almacen.status">Editar</button>
                                        <form asp-action="EliminarAlmacen" method="post" style="display:inline;">
                                            <input type="hidden" name="idAlmacen" value="@almacen.idAlmacen" />
                                            <button type="submit" class="btn btn-sm btn-danger">Deshabilitar</button>
                                        </form>
                                    }
                                    else if (almacen.status == 2)
                                    {
                                        <form asp-action="RehabilitarAlmacen" method="post" style="display:inline;">
                                            <input type="hidden" name="idAlmacen" value="@almacen.idAlmacen" />
                                            <button type="submit" class="btn btn-sm btn-success">Habilitar</button>
                                        </form>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </main>
        </div>
    </div>

    <!-- Modal para agregar almacen -->
    <div class="modal fade" id="modalAgregarAlmacen" tabindex="-1" role="dialog" aria-labelledby="modalAgregarAlmacenLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAgregarAlmacenLabel">Agregar Almacen</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="CrearAlmacen" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required />
                            @if (TempData["ErrorAgregarAlmacen"] != null)
                            {
                                <div id="errorAlertaAgregarAlmacen" class="alert alert-danger">
                                    @TempData["ErrorAgregarAlmacen"]
                                </div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="observaciones">Observaciones (Opcional)</label>
                            <textarea class="form-control" id="observaciones" name="observaciones" rows="4" data-val="false"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal para editar producto -->
    <div class="modal fade" id="modalEditarAlmacen" tabindex="-1" role="dialog" aria-labelledby="modalEditarAlmacenLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEditarAlmacenLabel">Editar Almacen</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="EditarAlmacen" method="post">
                    <div class="modal-body">
                        <input type="hidden" id="idalmacen" name="idalmacen" />
                        <input type="hidden" id="status" name="status" />
                        <div class="form-group">
                            <label for="isbn">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required />
                            @if (TempData["ErrorEditarAlmacen"] != null)
                            {
                                <div id="errorAlertaEditarAlmacen" class="alert alert-danger">
                                    @TempData["ErrorEditarAlmacen"]
                                </div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="observaciones">Observaciones (Opcional)</label>
                            <textarea class="form-control" id="observaciones" name="observaciones" rows="4"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Llenar el modal de edición con los datos del almacen
        $('#modalEditarAlmacen').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var idalmacen = button.data('idalmacen');
            var nombre = button.data('nombre');
            var observaciones = button.data('observaciones');
            var status = button.data('status');

            var modal = $(this);
            modal.find('#idalmacen').val(idalmacen);
            modal.find('#nombre').val(nombre);
            modal.find('#observaciones').val(observaciones);
            modal.find('#status').val(status);
        });
    </script>

    @if (TempData["ErrorAgregarAlmacen"] != null)
    {

        <script>
                        $(document).ready(function () {
                // Eliminar el fondo del modal si quedó bloqueado
                $('.modal-backdrop').remove();
                $('body').removeClass('modal-open');  // Evita que el fondo quede bloqueado

                // Mostrar el modal con un pequeño retraso
                setTimeout(function () {
                    $('#modalAgregarAlmacen').modal('show');
                }, 100);

                // Detectar el clic en cualquier botón con data-dismiss="modal"
                $('[data-dismiss="modal"]').on('click', function () {
                    $('#modalAgregarAlmacen').modal('hide');

                         // Ocultar la alerta cuando se cierre el modal
                    $('#errorAlertaAgregarAlmacen').fadeOut(400, function () {
                        $(this).remove(); // Remover la alerta del DOM después de desvanecerse
                    });

                });
            });

        </script>
    }

    @if (TempData["ErrorEditarAlmacen"] != null)
    {

        <script>
                 document.addEventListener("DOMContentLoaded", function() {
                var idAlmacen = "@TempData["EditIdAlmacen"]";
                var boton = document.querySelector('button[data-idalmacen="' + idAlmacen + '"]');
                if (boton) {
                    boton.click(); // Simula un clic en el botón de edición correcto
                }
            });

            $(document).ready(function () {

            // Detectar el clic en cualquier botón con data-dismiss="modal"
                $('[data-dismiss="modal"]').on('click', function () {
                         // Ocultar la alerta cuando se cierre el modal
                    $('#errorAlertaEditarAlmacen').fadeOut(400, function () {
                        $(this).remove(); // Remover la alerta del DOM después de desvanecerse
                    });

                });
            });

        </script>
    }

</body>
</html>
